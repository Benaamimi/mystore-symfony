{% extends 'base.html.twig' %}

{% block title %}Ecommerce - Ajouter un produit
{% endblock %}

{% block body %}
	<div class="container mt-4 col-md-5">
	<h1 class="my-4 text-center">Formulaire de produit</h1>
    
		{% for message in app.flashes('success') %}
			<div class="alert alert-dismissible alert-success">
				{{ message }}
			</div>
		{% endfor %}

		{{ form_start(form) }}
		{{ form_row(form.title) }}
		{{ form_row(form.description) }}
		{{ form_row(form.color) }}
		{{ form_row(form.size) }}
		{{ form_row(form.collection) }}
		{{ form_row(form.image) }}
		{{ form_row(form.price) }}
		{{ form_row(form.stock) }}

		<div class="form-group">
			<button type="submit" class="btn btn-primary my-4">Ajouter un produit</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
